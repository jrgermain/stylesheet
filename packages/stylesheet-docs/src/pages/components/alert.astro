---
import ComponentDocumentation from "../../layouts/ComponentDocumentation.astro";
import UsageExample from "../../components/UsageExample.astro";
---

<ComponentDocumentation
  name="Alert"
  description="A message that shows the status of a validation, request, or other operation."
>
  <UsageExample
    name="Statuses"
    description="To create an alert, create a `div` with the class `alert`. Every alert *must* have a status, which you can set by adding one of the following additional classes:\n\n- `info`\n- `success`\n- `warning`\n- `error`\n\nFailing to include a status is undefined behavior."
    code={`
      <div class="alert info">
        No payment is due at this time.
      </div>
      <div class="alert success">
        Your profile was updated successfully.
      </div>
      <div class="alert warning">
        Your connection is unstable.
      </div>
      <div class="alert error">
        Please enter a valid email address.
      </div>
    `}
  />

  <UsageExample
    name="Title"
    description="To add a title to the alert, add the class `alert-title` to the first child of the alert."
    code={`
      <div class="alert info">
        <p class="alert-title">Fun Fact</p>
        <p>The tip of a shoelace is called an aglet.</p>
      </div>
    `}
  />
</ComponentDocumentation>
