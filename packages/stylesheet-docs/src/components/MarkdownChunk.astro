---
import { marked } from "marked";
import { trimMarkdownPadding } from "../utils/trim-markdown-padding";

interface Props {
  content: string;
  class?: string;
}

const { content, class: className } = Astro.props;
const html = marked.parse(trimMarkdownPadding(content));
---

<div class:list={["markdown-output", className]} set:html={html} />
