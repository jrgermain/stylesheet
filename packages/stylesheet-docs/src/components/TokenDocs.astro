---
type TokenDef = {
  name: string;
  prop: string;
};

interface Props {
  template: (token: string) => string;
  tokens: TokenDef[];
}

const { tokens, template } = Astro.props;
---

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Token</th>
      <th>Example</th>
    </tr>
  </thead>
  <tbody>
    {
      tokens.map((token) => (
        <tr>
          <td>{token.name}</td>
          <td>
            <code>{token.prop}</code>
          </td>
          <td set:html={template(token.prop)} />
        </tr>
      ))
    }
  </tbody>
</table>
