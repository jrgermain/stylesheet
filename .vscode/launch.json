{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Stylesheet: Build and Watch",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "watch"],
      "console": "integratedTerminal"
    },
    {
      "name": "Docs: Start Dev Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/docs",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal"
    },
    {
      "name": "Docs: Start Dev Server (Host)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/docs",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev", "--", "--host"],
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Run All - Development Mode",
      "configurations": [
        "Docs: Start Dev Server",
        "Stylesheet: Build and Watch"
      ]
    },
    {
      "name": "Run All - Development Mode (Host)",
      "configurations": [
        "Docs: Start Dev Server (Host)",
        "Stylesheet: Build and Watch"
      ]
    }
  ]
}
