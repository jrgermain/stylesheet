---
import ComponentDocumentation from "../../layouts/ComponentDocumentation.astro";
import UsageExample from "../../components/UsageExample.astro";
---

<ComponentDocumentation
  name="Divider"
  description="An element designed to visually separate or partition others."
>
  <UsageExample
    name="Defaults"
    description="To create a Divider, create an element with the class `divider`."
    code={`
      <p>Some content</p>
      <hr class="divider"/>
      <p>More content</p>
    `}
    outputWrapperClass="stack vertical no-gap"
  />

  <UsageExample
    name="Orientation"
    description="You can change the direction of a Divider by adding the classes `horizontal` (default) or `vertical`."
    code={`
      <p>Some content</p>
      <hr class="divider vertical"/>
      <p>More content</p>
    `}
    outputWrapperClass="stack horizontal no-gap"
  />

  <UsageExample
    name="Thickness"
    description="To make the Divider thicker, add the class `thick` (to make it a little thicker) or `thicker` (to make it significantly thicker)."
    code={`
      <p>Some content</p>
      <hr class="divider thick"/>
      <div class="stack horizontal no-gap">
        <p>More content</p>
        <hr class="divider thick vertical"/>
        <p>Even more content</p>
      </div>
      <hr class="divider thicker"/>
      <div class="stack horizontal no-gap">
        <p>More content</p>
        <hr class="divider thicker vertical"/>
        <p>Even more content</p>
      </div>
    `}
    outputWrapperClass="stack vertical no-gap"
  />

  <UsageExample
    name="Pattern"
    description="You can change the **pattern** of a Divider by adding the classes `dashed` or `dotted`."
    code={`
      <p>Some content</p>
      <hr class="divider dashed"/>
      <p>More content</p>
      <hr class="divider dotted"/>
      <p>Even more content</p>
    `}
    outputWrapperClass="stack vertical no-gap"
  />

  <UsageExample
    name="Visibility"
    description="To add space between elements without a visible line, create a Divider with the class `invisible`."
    code={`
      <p>Some content</p>
      <hr class="divider invisible"/>
      <p>More content</p>
    `}
    outputWrapperClass="stack vertical no-gap"
  />
</ComponentDocumentation>
