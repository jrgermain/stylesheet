---
import ComponentDocumentation from "../../layouts/ComponentDocumentation.astro";
import UsageExample from "../../components/UsageExample.astro";
---

<ComponentDocumentation
  name="Progress"
  description="An indicator of how far along a process currently is."
>
  <UsageExample
    name="Basic Usage"
    description="You can style `progress` elements by giving them the `progress` class."
    code={'<progress class="progress" value="50" max="100"></progress>'}
  />

  <UsageExample
    name="Indeterminate"
    description="To make a Progress bar indeterminate, omit the `value` attribute."
    code={'<progress class="progress"></progress>'}
  />
</ComponentDocumentation>
